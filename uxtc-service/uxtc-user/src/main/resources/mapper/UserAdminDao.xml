        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="null != memberId and '' != memberId">
                #{memberId},
            </if>
            <if test="null != consumeAmount and '' != consumeAmount">
                #{consumeAmount},
            </if>
            <if test="null != orderCount and '' != orderCount">
                #{orderCount},
            </if>
            <if test="null != couponCount and '' != couponCount">
