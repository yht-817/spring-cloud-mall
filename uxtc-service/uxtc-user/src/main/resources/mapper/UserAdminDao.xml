    <sql id="Base_Column_List">
                id,
                member_level_id,
                username,
                password,
                nickname,
                phone,
                status,
                create_time,
                icon,
                gender,
                birthday,
                city,
                job,
                personalized_signature,
                source_type,
                integration,
                growth,
                luckey_count,
                history_integration
    </sql>

    <select id="getUserDetails" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM ums_member
        WHERE member_level_id = #{userId}
    </select>

